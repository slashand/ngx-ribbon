{
  "editor.minimap.enabled": false,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "dist/**": true,
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "demo/**": true,
    "build/**": true,
    "dist/**": true,
    "*/**/release/**": true,
    "**/.ng_pkg_build/**": true,
    "**/coverage/**": true
  },
  "prettier.singleQuote": true,
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "typescript.reportStyleChecksAsWarnings": false,

  "importSorter.generalConfiguration.sortOnBeforeSave": true,
  "importSorter.importStringConfiguration.quoteMark": "single",

  "importSorter.sortConfiguration.customOrderingRules.defaultOrderLevel": 100,
  "importSorter.sortConfiguration.customOrderingRules.rules": [{
      "type": "importMember",
      "regex": "^$",
      "orderLevel": 10,
      "disableSort": true
    },
    {
      "regex": "^@angular",
      "orderLevel": 20
    },
  ],
  "html.format.wrapAttributes": "force",
  "html.format.wrapLineLength": 40,
  "beautify.ignore": ["**/*.ts", "**/*.json", "**/*.scss", "**/*.js"]
}
